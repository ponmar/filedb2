<Window x:Class="FileDB2Browser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileDB2Browser"
        mc:Ignorable="d"
        Title="FileDB2" Height="768" Width="1024" ResizeMode="CanResize">
    <Window.Resources>
        <Style x:Key="PageButton" TargetType="Button">
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Padding" Value="15"/>
        </Style>

        <Style x:Key="PageButtonHeading" TargetType="Label">
            <Setter Property="Margin" Value="0,15,0,0"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>

        <Style x:Key="PageHeading" TargetType="Label">
            <Setter Property="Margin" Value="0,0,0,0"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>

        <Style x:Key="PageGrid" TargetType="Grid">
            <Setter Property="Margin" Value="5,5,5,5"/>
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>

        <Style x:Key="PageTextblock" TargetType="TextBlock">
            <Setter Property="Margin" Value="5,5,5,5"/>
        </Style>
    </Window.Resources>

    <DockPanel>
        <StackPanel Orientation="Vertical" Grid.Row="0" Grid.Column="0" DockPanel.Dock="Left">
            <Label Style="{StaticResource PageButtonHeading}">Browse</Label>
            <Button Style="{StaticResource PageButton}" Click="SetStartPage">Home</Button>
            <Button Style="{StaticResource PageButton}" Click="SetFindPage">Find</Button>
            <Button Style="{StaticResource PageButton}" Click="SetBirthdaysPage">Birthdays</Button>
            <Label Style="{StaticResource PageButtonHeading}">Categories</Label>
            <Button Style="{StaticResource PageButton}" Click="SetPersonsPage">Persons</Button>
            <Button Style="{StaticResource PageButton}" Click="SetLocationsPage">Locations</Button>
            <Button Style="{StaticResource PageButton}" Click="SetTagsPage">Tags</Button>
            <Label Style="{StaticResource PageButtonHeading}">Files</Label>
            <Button Style="{StaticResource PageButton}" Click="SetImportPage">Import</Button>
            <Button Style="{StaticResource PageButton}" Click="SetToolsPage">Tools</Button>
        </StackPanel>

        <Border BorderThickness="2 2 2 2" BorderBrush="LightGray">
            <Grid Margin="20 5 20 5">
                <!-- Start page -->
                <DockPanel Visibility="Collapsed" Name="StartPage">
                    <Label DockPanel.Dock="Top" Style="{StaticResource PageHeading}">Welcome to FileDB2!</Label>
                    <Grid Style="{StaticResource PageGrid}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource PageTextblock}">Database:</TextBlock>
                        <TextBlock Grid.Row="0" Grid.Column="1" Style="{StaticResource PageTextblock}" Text="{Binding Database}"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Style="{StaticResource PageTextblock}">Files root directory:</TextBlock>
                        <TextBlock Grid.Row="1" Grid.Column="1" Style="{StaticResource PageTextblock}" Text="{Binding FilesRootDirectory}"/>

                        <Label></Label>
                    </Grid>
                </DockPanel>
                <!-- Find page -->
                <DockPanel Visibility="Collapsed" Name="FindPage">
                    <Label DockPanel.Dock="Top" Style="{StaticResource PageHeading}">Find</Label>
                    <StackPanel Orientation="Vertical">
                        <Button Command="{Binding FindRandomFilesCommand}">Find 10 random files</Button>
                        <TextBlock Text="{Binding SearchNumberOfHits}"/>
                        <TextBlock Text="{Binding TotalNumberOfFiles}"/>
                    </StackPanel>
                </DockPanel>
                <!-- Birthdays page -->
                <DockPanel Visibility="Collapsed" Name="BirthdaysPage">
                    <Label DockPanel.Dock="Top" Style="{StaticResource PageHeading}">Birthdays</Label>
                    <ScrollViewer>
                        <DataGrid ItemsSource="{Binding Birthdays}" GridLinesVisibility="Horizontal" CanUserResizeColumns="False" CanUserResizeRows="False" CanUserAddRows="false" CanUserDeleteRows="false"/>
                    </ScrollViewer>
                </DockPanel>
                <!-- Persons page -->
                <DockPanel Visibility="Collapsed" Name="PersonsPage">
                    <Label DockPanel.Dock="Top" Style="{StaticResource PageHeading}">Persons</Label>
                    <ScrollViewer>
                        <DataGrid ItemsSource="{Binding Persons}" GridLinesVisibility="Horizontal" CanUserResizeColumns="False" CanUserResizeRows="False"/>
                    </ScrollViewer>
                </DockPanel>
                <!-- Locations page -->
                <DockPanel Visibility="Collapsed" Name="LocationsPage">
                    <Label DockPanel.Dock="Top" Style="{StaticResource PageHeading}">Locations</Label>
                    <ScrollViewer>
                        <DataGrid ItemsSource="{Binding Locations}" GridLinesVisibility="Horizontal" CanUserResizeColumns="False" CanUserResizeRows="False"/>
                    </ScrollViewer>
                </DockPanel>
                <!-- Tags page -->
                <DockPanel Visibility="Collapsed" Name="TagsPage">
                    <Label DockPanel.Dock="Top" Style="{StaticResource PageHeading}">Tags</Label>
                    <ScrollViewer>
                        <DataGrid ItemsSource="{Binding Tags}" GridLinesVisibility="Horizontal" CanUserResizeColumns="False" CanUserResizeRows="False"/>
                    </ScrollViewer>
                </DockPanel>
                <!-- Import page -->
                <DockPanel Visibility="Collapsed" Name="ImportPage">
                    <Label DockPanel.Dock="Top" Style="{StaticResource PageHeading}">Import</Label>
                </DockPanel>
                <!-- Tools page -->
                <DockPanel Visibility="Collapsed" Name="ToolsPage">
                    <Label DockPanel.Dock="Top" Style="{StaticResource PageHeading}">Tools</Label>
                </DockPanel>
            </Grid>
        </Border>
    </DockPanel>
</Window>
