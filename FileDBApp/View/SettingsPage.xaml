<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FileDBApp.View.SettingsPage"
             xmlns:viewmodel="clr-namespace:FileDBApp.ViewModel"
             x:DataType="viewmodel:SettingsViewModel"
             Title="Settings">
    <Grid Margin="10" ColumnDefinitions="*" RowDefinitions="Auto,*,Auto" RowSpacing="10">
        <Label Text="FileDB JSON data to import:" Grid.Row="0"/>
        <ScrollView Grid.Row="1">
            <Editor AutoSize="TextChanges" Text="{Binding DataJson}"/>
        </ScrollView>
        <Button Text="Import" Grid.Row="2" Command="{Binding ImportCommand}" IsEnabled="{Binding ImportPossible}"/>
    </Grid>
</ContentPage>
