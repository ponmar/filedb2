<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FileDBApp.View.SettingsPage"
             xmlns:viewmodel="clr-namespace:FileDBApp.ViewModel"
             x:DataType="viewmodel:SettingsViewModel"
             Title="Settings">
    <VerticalStackLayout Margin="10" Spacing="5">
        <Button Text="Import FileDB JSON data..." Command="{Binding ImportCommand}"/>
        <Button Text="Clear data" Command="{Binding ClearCommand}"/>
    </VerticalStackLayout>
</ContentPage>
