<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FileDBApp.View.RipPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FileDBApp.View"
    xmlns:viewmodel="clr-namespace:FileDBApp.ViewModel"
    Title="Rest in Peace"
    x:DataType="viewmodel:RipViewModel">

    <CollectionView ItemsSource="{Binding Persons}" SelectionMode="None">
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="viewmodel:DeceasedPerson">
                <VerticalStackLayout VerticalOptions="Center" Margin="10">
                    <Label Text="{Binding Header}" Style="{StaticResource CardHeader}" />
                    <Label Text="{Binding Details}" Style="{StaticResource CardDetails}" />
                </VerticalStackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
