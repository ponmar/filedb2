<Window x:Class="FileDB.View.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileDB.View"
        mc:Ignorable="d"
        Title="SplashWindow" Height="450" Width="800"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        WindowStyle="None"
        WindowStartupLocation="CenterOwner"
        MinHeight="150"
        MinWidth="400"
        AllowsTransparency="True"
        Background="Transparent">
    <Grid>
        <Border Style="{StaticResource BorderGroup}">
            <TextBlock x:Name="Text" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource PageSubHeading}"/>
        </Border>
    </Grid>
</Window>
