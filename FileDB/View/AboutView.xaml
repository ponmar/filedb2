<UserControl x:Class="FileDB.View.AboutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:FileDB.View"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <Label DockPanel.Dock="Top" Style="{StaticResource PageHeading}" Content="{Binding Heading}"></Label>
        <ScrollViewer>
            <StackPanel Orientation="Vertical" Margin="10">
                <Label Style="{StaticResource PageSubHeading}">Getting Started</Label>
                <TextBlock Margin="10" Text="TBD"/>

                <Label Style="{StaticResource PageSubHeading}">Notes About Your Files Collection</Label>
                <TextBlock TextWrapping="Wrap" Margin="10">FileDB does not modify any files in your file collection. Files are read when adding files, viewing files or when reading Exif-data via the API.</TextBlock>
                <TextBlock TextWrapping="Wrap" Margin="10">Before adding your files, take a moment to think about the directory structure. Any directory structure can be used for sorting files in your existing collection. However, this layout has been proven to work very well:</TextBlock>

                <TreeView Margin="10">
                    <TreeViewItem Header="root" IsExpanded="True">
                        <TreeViewItem Header="2015" IsExpanded="True">
                            <TreeViewItem Header="2015-06-12 - Biking" IsExpanded="True">
                                <TreeViewItem Header="file1.jpg"/>
                                <TreeViewItem Header="file2.jpg"/>
                            </TreeViewItem>
                            <TreeViewItem Header="2015-07-13 - Birthday party" IsExpanded="True">
                                <TreeViewItem Header="somefile1.jpg"/>
                            </TreeViewItem>
                        </TreeViewItem>
                        <TreeViewItem Header="2016" IsExpanded="True">
                            <TreeViewItem Header="2016-01-05 - Something else" IsExpanded="True">
                                <TreeViewItem Header="anotherfile1.jpg"/>
                                <TreeViewItem Header="anotherfile2.jpg"/>
                            </TreeViewItem>
                        </TreeViewItem>
                    </TreeViewItem>
                </TreeView>

                <TextBlock TextWrapping="Wrap" Margin="10">File paths in FileDB uses UNIX style directory separators ('/'), mostly because that is how FileDB stores the paths internally.</TextBlock>
                <TextBlock TextWrapping="Wrap" Margin="10">If you rename or delete files that has been added to FileDB you need to remove them in FileDB as well (and possibly add them again).</TextBlock>

                <Label Style="{StaticResource PageSubHeading}">Command Line Arguments</Label>
                <StackPanel Orientation="Horizontal" Margin="10">
                    <TextBlock>--demo</TextBlock>
                    <TextBlock Margin="10 0 0 0">Enable demo configuration to play around with</TextBlock>
                </StackPanel>

                <Label Style="{StaticResource PageSubHeading}">Changelog</Label>
                <TextBlock Margin="10" Text="{Binding Changes}"/>

                <Label Style="{StaticResource PageSubHeading}">Downloads</Label>
                <TextBlock Margin="10 0 0 0">
                    <Hyperlink NavigateUri="{Binding DownloadLink}" RequestNavigate="OpenUri">
                        <TextBlock Text="Click to open" ToolTip="{Binding DownloadLink}"/>
                    </Hyperlink>
                </TextBlock>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</UserControl>
