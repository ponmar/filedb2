<UserControl x:Class="FileDB.View.Filters.PositionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FileDB.View.Filters"
             xmlns:rs="clr-namespace:FileDB.Resources"
             mc:Ignorable="d" 
             xmlns:viewmodel="clr-namespace:FileDB.ViewModel"
             d:DataContext="{d:DesignInstance Type=viewmodel:FilterSettingsViewModel}"
             xmlns:converters="clr-namespace:FileDB.Converters"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:FilterTypeToStringConverter x:Key="FilterTypeToStringConverter"/>
    </UserControl.Resources>
    <StackPanel Orientation="Horizontal">
        <ComboBox Grid.Column="0" Margin="3" ItemsSource="{Binding FilterTypes}" SelectedItem="{Binding SelectedFilterType}" Width="100" ToolTip="Filter type" VerticalAlignment="Center" TextSearch.TextPath=".">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Path=., Converter={StaticResource FilterTypeToStringConverter}}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <TextBox Style="{StaticResource PageInnerTextBox}" Margin="3" Text="{Binding PositionText}" Width="150" VerticalAlignment="Center" ToolTip="{x:Static rs:Strings.SearchFilterPositionInputToolTip}"/>
        <TextBox Style="{StaticResource PageInnerTextBox}" Margin="3" Text="{Binding RadiusText}" Width="50" VerticalAlignment="Center" ToolTip="{x:Static rs:Strings.SearchFilterPositionRadiusInputToolTip}"/>
    </StackPanel>
</UserControl>
