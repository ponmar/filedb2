<UserControl x:Class="FileDB.View.PresentationDescription"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FileDB.View" xmlns:converters="clr-namespace:FileDB.Converters"
             xmlns:viewmodel="clr-namespace:FileDB.ViewModel"
             d:DataContext="{d:DesignInstance Type=viewmodel:SearchViewModel}"
             xmlns:rs="clr-namespace:FileDB.Resources"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Style="{StaticResource MaximizedBorderGroup}" Margin="20 0 20 20" Padding="10" Visibility="{Binding Description, Converter={converters:StringNullOrEmptyToVisibilityConverter}}">
        <TextBlock Style="{StaticResource PageInnerSubHeading}" FontSize="{Binding OverlayFontSize}" Text="{Binding Description}" ToolTip="{Binding Description}" TextWrapping="Wrap"/>
    </Border>
</UserControl>
