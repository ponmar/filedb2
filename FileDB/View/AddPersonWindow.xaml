<Window x:Class="FileDB.View.AddPersonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileDB.View"
        mc:Ignorable="d"
        Title="{Binding Title}"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">
    <StackPanel Orientation="Vertical">
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource PageTextBlock}" Text="Firstname:"/>
            <TextBox Grid.Row="0" Grid.Column="1" Style="{StaticResource PageTextBox}" Width="150" Text="{Binding Firstname}"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Style="{StaticResource PageTextBlock}" Text="Lastname:"/>
            <TextBox Grid.Row="1" Grid.Column="1" Style="{StaticResource PageTextBox}" Width="150" Text="{Binding Lastname}"/>

            <TextBlock Grid.Row="2" Grid.Column="0" Style="{StaticResource PageTextBlock}" Text="Description (optional):"/>
            <TextBox Grid.Row="2" Grid.Column="1" Style="{StaticResource PageTextBox}" Width="150" Text="{Binding Description}"/>

            <TextBlock Grid.Row="3" Grid.Column="0" Style="{StaticResource PageTextBlock}" Text="Date of birth (optional):"/>
            <TextBox Grid.Row="3" Grid.Column="1" Style="{StaticResource PageTextBox}" Width="150" Text="{Binding DateOfBirth}" ToolTip="YYYY-MM-DD"/>

            <TextBlock Grid.Row="4" Grid.Column="0" Style="{StaticResource PageTextBlock}" Text="Profile picture file id (optional):"/>
            <TextBox Grid.Row="4" Grid.Column="1" Style="{StaticResource PageTextBox}" Width="150" Text="{Binding ProfilePictureFileId}"/>

            <TextBlock Grid.Row="5" Grid.Column="0" Style="{StaticResource PageTextBlock}" Text="Sex (ISO/IEC 5218):"/>
            <ComboBox Grid.Row="5" Grid.Column="1" Style="{StaticResource PageComboBox}" Width="150" ItemsSource="{Binding SexValues}" SelectedItem="{Binding SexSelection}"/>
        </Grid>

        <Button Style="{StaticResource NormalButton}" Command="{Binding SaveCommand}">Save</Button>
    </StackPanel>
</Window>
