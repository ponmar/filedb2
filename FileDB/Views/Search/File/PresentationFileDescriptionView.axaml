<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="FileDB.Views.Search.File.PresentationFileDescriptionView">
	<Border Classes="PresentationBorder" Padding="10" IsVisible="{Binding Description, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
		<TextBlock FontSize="{Binding OverlayFontSize}" Text="{Binding Description}" ToolTip.Tip="{Binding Description}" TextWrapping="Wrap"/>
	</Border>
</UserControl>
