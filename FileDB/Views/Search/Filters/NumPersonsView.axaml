<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:lang="clr-namespace:FileDB.Lang"
			 xmlns:converters="clr-namespace:FileDB.Converters"
             mc:Ignorable="d"
             x:Class="FileDB.Views.Search.Filters.NumPersonsView">
	<StackPanel Orientation="Horizontal" DataContext="{Binding FilterViewModel}">
		<TextBox Margin="0 0 3 0" Text="{Binding NumPersonsMin}" Width="30" VerticalAlignment="Center" ToolTip.Tip="{x:Static lang:Strings.SearchFilterNumPersonsMin}"/>
		<TextBlock Margin="0 0 3 0" Text="-" VerticalAlignment="Center" />
		<TextBox Text="{Binding NumPersonsMax}" Width="30" VerticalAlignment="Center" ToolTip.Tip="{x:Static lang:Strings.SearchFilterNumPersonsMax}"/>
	</StackPanel>
</UserControl>
