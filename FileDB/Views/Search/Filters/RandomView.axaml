<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:lang="clr-namespace:FileDB.Lang"
			 xmlns:converters="clr-namespace:FileDB.Converters"
             mc:Ignorable="d"
             x:Class="FileDB.Views.Search.Filters.RandomView">
    <StackPanel Orientation="Horizontal" DataContext="{Binding FilterViewModel}">
        <TextBox
            Width="50"
            VerticalAlignment="Center"
            Text="{Binding NumRandomFiles}"
            ToolTip.Tip="{x:Static lang:Strings.SearchRandomFilesToolTip}" />
    </StackPanel>
</UserControl>
