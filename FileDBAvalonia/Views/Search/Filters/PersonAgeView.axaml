<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:lang="clr-namespace:FileDBAvalonia.Lang"
			 xmlns:converters="clr-namespace:FileDBAvalonia.Converters"
             mc:Ignorable="d"
             x:Class="FileDBAvalonia.Views.Search.Filters.PersonAgeView">
	<StackPanel Orientation="Horizontal" DataContext="{Binding FilterViewModel}">
		<TextBox Margin="0 0 3 0" Text="{Binding PersonAgeFrom}" Width="30" VerticalAlignment="Center" ToolTip.Tip="{x:Static lang:Strings.SearchFilterPersonAgeFrom}"/>
		<TextBlock Margin="0 0 3 0" Text="-" VerticalAlignment="Center" />
		<TextBox Text="{Binding PersonAgeTo}" Width="30" VerticalAlignment="Center" ToolTip.Tip="{x:Static lang:Strings.SearchFilterPersonAgeTo}"/>
	</StackPanel>
</UserControl>
