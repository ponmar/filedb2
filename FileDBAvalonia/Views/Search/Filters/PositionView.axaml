<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:lang="clr-namespace:FileDBAvalonia.Lang"
			 xmlns:converters="clr-namespace:FileDBAvalonia.Converters"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="FileDBAvalonia.Views.Search.Filters.PositionView">
	<StackPanel Orientation="Horizontal" DataContext="{Binding FilterViewModel}">
		<TextBox Margin="0 0 3 0" Text="{Binding PositionText}" Width="150" VerticalAlignment="Center" ToolTip.Tip="{x:Static lang:Strings.SearchFilterPositionInputToolTip}"/>
		<ComboBox Margin="0 0 3 0" ItemsSource="{Binding LocationsWithPosition}" SelectedItem="{Binding SelectedLocationsWithPosition}" VerticalAlignment="Center"/>
		<Button Margin="0 0 3 0" Content="{x:Static lang:Strings.SearchFromCurrentFileButton}" IsEnabled="{Binding CurrentFileHasPosition}" Command="{Binding UsePositionFromCurrentFileCommand}" VerticalAlignment="Center"/>
		<TextBox Text="{Binding RadiusText}" Width="50" VerticalAlignment="Center" ToolTip.Tip="{x:Static lang:Strings.SearchFilterPositionRadiusInputToolTip}"/>
	</StackPanel>
</UserControl>
