<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:lang="clr-namespace:FileDBAvalonia.Lang"
			 xmlns:searchviews="clr-namespace:FileDBAvalonia.Views.Search"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="FileDBAvalonia.Views.SearchView">
	<DockPanel>
		<TextBlock DockPanel.Dock="Top" Text="{x:Static lang:Strings.SearchTitle}" Classes="PageHeader"/>
		<Grid ColumnDefinitions="*" RowDefinitions="auto,auto,*">
			<StackPanel Grid.Row="0" IsVisible="{Binding !Fullscreen}">
				<searchviews:CriteriaView/>
			</StackPanel>
			<StackPanel Grid.Row="1" IsVisible="{Binding !Fullscreen}" Margin="0 10 0 10">
				<searchviews:ResultView/>
			</StackPanel>
			<searchviews:FileView Grid.Row="2"/>
		</Grid>
	</DockPanel>
</UserControl>
